{
  "env": {
    "browser": true
  },
  "extends": "google",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "$": true
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "off"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": ["warn", {
      "allow": ["warn", "error"]
    }],
    "one-var": ["warn", {
      "let": "never"
    }],
    "max-len": ["warn", {
      "code": 80
    }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "ignore"
    }],
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }]
  }
}